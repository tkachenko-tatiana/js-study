{
  "compilerOptions": {
    "outDir": "../build/server",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "../node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "./*.ts",
    "./server.d.ts",
    "../typings.d.ts"
  ],
  "exclude": [
    "./**/__tests__"
  ]
}
